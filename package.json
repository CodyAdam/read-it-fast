{
  "name": "read-it-fast",
  "description": "Rapid reading browser extension using RSVP. Hover over any text while holding a modifier key to read word-by-word at customizable speeds with optimal recognition point highlighting.",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/codyadam/read-it-fast.git"
  },
  "author": "Cody Adam <cody@codyadam.com>",
  "license": "MIT",
  "homepage": "https://github.com/codyadam/read-it-fast",
  "bugs": {
    "url": "https://github.com/codyadam/read-it-fast/issues"
  },
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare && panda codegen"
  },
  "dependencies": {
    "@fontsource-variable/geist-mono": "^5.2.7",
    "@hookform/resolvers": "^5.2.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.71.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@pandacss/dev": "^1.8.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@wxt-dev/module-react": "^1.1.5",
    "typescript": "^5.9.3",
    "wxt": "^0.20.6"
  }
}
